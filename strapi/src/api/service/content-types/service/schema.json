{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "definedPrice": {
      "type": "boolean",
      "required": true
    },
    "cost": {
      "type": "decimal",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "definedPrice"
            },
            true
          ]
        }
      }
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "unique": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
